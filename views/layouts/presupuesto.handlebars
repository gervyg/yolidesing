  productosSeleccionados.add(id)
  console.log(id)
  console.log(foto)
  const obj = {
    id: id,
    foto:foto,
    articulo: articulo,
    precio:precio,
    cantidad: 1
  }
  productosSeleccionados.push(obj);

}

</script>